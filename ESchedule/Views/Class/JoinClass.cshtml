@model ESchedule.Models.JoinClassModel
@{
    ViewData["Title"] = "Урок";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card" style="border-radius: 25px;">
                <div class="card-body">
                    <form asp-action="JoinClass">
                       @*<input asp-for="UserName" type="hidden"/>*@
                        <div class="mb-2">
                            <div class="form-floating">
                                <input asp-for="JoinCode" type="text" class="form-control" id="InputUserName" placeholder="Код для приєднання" />
                                <label asp-for="JoinCode" for="InputUserName" class="form-label">Код для приєднання</label>
                            </div>
                        </div>
                        <span asp-validation-for="JoinCode" class="text-danger"></span>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <button type="submit" class="btn btn-primary w-100 mt-2">Приєднатися</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


